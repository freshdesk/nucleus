{{#unless _isEmpty}}
  <div class="nucleus-table-container">
    {{#nucleus-pagination records=rows pageSize=pageSize as |pagination|}}
      {{yield (hash
        selectedRows=selected
        paginator = pagination.paginator
        table = (component "nucleus-table/table"
        columns=columns
        pageItems=pagination.pageItems
        canFilter=canFilter
        selectAll=selectAll
        tableCaption=tableCaption
        selectedColumnsTitle=selectedColumnsTitle
        filterTitle=filterTitle
        columnsTitle=columnsTitle
        selected=selected
        )
      )}}
      {{pagination.paginator mini=isMini}}
    {{/nucleus-pagination}}
  </div>
{{/unless}}