{{#custom-power-calendar-range
  center=currentDate
  locale=locale
  selected=selectedDate
  onSelect=modifySelectedDate 
  onCenterChange=modifyCurrentDate as |calendar| }}

  {{calendar.Nav 
    locale=locale 
    calendar=calendar 
    currentDate=currentDate 
    nextMonthDate=nextMonthDate
  }}

  <div class="nucleus-datepicker__months">
    {{calendar.Days 
      showDaysAround=true 
      weekdayFormat="min" 
    }}
    {{calendar.Days 
      center=nextMonthDate 
      showDaysAround=true 
      weekdayFormat="min" 
    }}
  </div>
{{/custom-power-calendar-range}}
