<label for={{name}}>{{label}}</label>
<div>
  <Input placeholder={{placeholder}} 
    name={{name}} 
    value={{value}} 
    {{on "change" this.dateChanged}} 
    aria-label={{t ariaLabelText 
      start=(if selectedStartDate (format-date selectedStartDate "d MMMM yyyy" locale))
      end=(if selectedEndDate (format-date selectedEndDate "d MMMM yyyy" locale))
      locale=locale 
      htmlSafe=true
    }} 
    {{on "keydown" this.keyDownPressed}}
  />
  {{nucleus-icon name="nucleus-calendar" size="small" }}
</div>
