{{#if hasBlock}}
  {{yield}}
{{else}}
  {{#if hasCloseButton}}
    {{nucleus-button
      variant="secondary"
      label=closeTitle
      data-test-nucleus-cancel="cancel"
      onClick=(action onClose)}}
  {{/if}}
  {{#if hasSubmitButton}}
    {{nucleus-button
      disabled=submitDisabled
      variant=type
      label=submitTitle
      data-test-nucleus-confirm="confirm" 
      onClick=(action onSubmit)}}
  {{/if}}
{{/if}}