{{#if isOpen}}
  {{#ember-wormhole to="nucleus-modal-wormhole" renderInPlace=renderInPlace}}
    {{#nucleus-modal/dialog
      id=modalId
      onClose=(action "close")
      onSubmit=(action "submit")
      size="slider"
      position=position
      animationClass="slide-right"
      keyboard=isDismissible
      backdrop=backdrop
      data-test-id=data-test-id
    }}
      {{yield
        (hash
          header=(component "nucleus-modal/header"
                  title=title
                  icon=icon
                  description=description
                  position=position
                  closeButton=isDismissible
                  closeButtonType="primary"
                  onClose=(action "close"))
          body=(component "nucleus-modal/body")
          footer=(component "nucleus-modal/footer"
                  type=type
                  submitTitle=submitTitle
                  closeTitle=closeTitle
                  submitDisabled=submitDisabled
                  onClose=(action "close")
                  onSubmit=(action "submit"))
          close=(action "close")
          submit=(action "submit")
        )
      }}
    {{/nucleus-modal/dialog}}
  {{/ember-wormhole}}
{{/if}}
