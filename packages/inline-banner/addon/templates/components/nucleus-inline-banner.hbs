{{#if hasBlock}}
  {{yield
    (hash
      close=(action "onCloseTip")
    )
  }}
{{else}}
  <div class="nucleus-inline-banner__icon">
    {{nucleus-icon name=_icon size="medium"}}
  </div>
  <div class="nucleus-inline-banner__content">
    <div data-test-id="nucleus-inline-banner-title">{{_title}}</div>
  </div>
  {{#if isDismissible}}
    <div class="nucleus-inline-banner__close">
      {{nucleus-button
        type="text"
        size="mini"
        icon="nucleus-cross"
        onClick=(action "onCloseTip")}}
    </div>
  {{/if}}
{{/if}}
