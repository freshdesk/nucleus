<div class="nucleus-tabs--list" role="tablist" aria-label={{description}}>
  <div class="nucleus-tabs--list--container">
    {{#each tabPanels key="id" as |tab index|}}
      {{#nucleus-tabs/tab-list-item 
          name=tab.name 
          disabled=tab.disabled
          controls=tab.id 
          index=index 
          currentSelected=currentSelected 
          registerTabListItem=(action registerTabListItem) 
          handleActivateTab=(action activateTab)}}
        {{tab.name}}
      {{/nucleus-tabs/tab-list-item}}
    {{/each}}
  </div>
</div>

{{yield (hash
  panel=(component "nucleus-tabs/tab-panel")
  props=(hash
    registerPanel=(action "registerPanel")
    currentSelected=currentSelected
    tabListItems=tabListItems
  )
)}}
