{{#ember-wormhole to="modal-overlays"}}
  <div class="flash-messages flash-messages--top-right">
    {{#each flashMessages.queue as |flash index|}}
      {{#transition-group transitionClass="slide-down"}}
        {{flash-message flash=flash id=(inc index)}}
      {{/transition-group}}
    {{/each}}
  </div>
{{/ember-wormhole}}