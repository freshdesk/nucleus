{{#if isOpen}}
  <div class="quick-tip__icon">
    {{svg-jar icon class="icon" width="12px" height="12px"}}
  </div>
  <div class="quick-tip__content">
    <div data-test-id="quick-tip-title">{{html-safe title}}</div>
    {{#if isLinkAction}}
      <div class="mt-4">
        {{#if linkHref}}
          <a class="tip-link" href={{linkHref}}
            target="_blank" rel="noopener" data-test-id="quick-tip-link">
            {{linkText}}
          </a>
        {{else if linkAction}}
          <a class="tip-link"
            onclick={{action "onLinkAction"}}
            data-test-id="quick-tip-link-action">
            {{linkText}}
          </a>
        {{/if}}
      </div>
    {{/if}}
  </div>
  {{#if showCloseIcon}}
    <div class="quick-tip__close">
      {{nucleus-button
        type="link"
        size="mini"
        icon="close"
        onClick=(action "onCloseTip")}}
    </div>
  {{/if}}
{{/if}}
